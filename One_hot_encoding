labels = ["cat", "dog", "dog", "bird", "cat"]
new = list(set(labels))

label_index = {}
index = 0
for label in new:
    label_index[label] = index
    index += 1

one_hot = []
for label in labels:
    vector = [0] * len(new)
    pos = label_index[label]
    vector[pos] = 1
    one_hot.append(vector)

print(label_index)
print(one_hot)
